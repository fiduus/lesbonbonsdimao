{% extends '::layout/layoutAdmin.html.twig' %}

{% block stylesheets %}
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap-theme.min.css">       
{% endblock %}
{%block body%}        
<div class="col-lg-7">
       <div class="panel panel-primary">
           <div class="panel-heading">
              <h2>Insertion d'un code promotionnel</h2>
           </div>
           <div class="panel-body">
               <div class="row-fluid">
                   <fieldset>
                       <legend></legend>                                
             <div class='form-horizontal'>
              {{ form_start(form, {'method': 'post', 'action': path('adminPromo_create'), 'attr': {'class': 'adminPromo_create'}}) }}
              {{ form_errors(form) }}
               <div class="form-group">                 
                <div class="col-lg-7  offset1">
                    {{ form_widget(form.nomReduction,{'attr': {'class': 'form-control','placeholder':'Description'}})  }}
                     <div class="err" style="color:red;">{{ form_errors(form.nomReduction) }}</div>
                </div>
             </div>
              <div class="form-group">                 
                <div class="col-lg-7  offset1">
                    {{ form_widget(form.pourcentage,{'attr': {'class': 'form-control','placeholder':'Pourcentage de réduction'}})  }}%
                     <div class="err" style="color:red;">{{ form_errors(form.pourcentage) }}</div>
                </div>
             </div>
            
             <div class="form-group">                
             <div class="col-lg-5 offset1 ">
                  <div class="btn-group" role="group" aria-label="Basic example">
                        <div class="btn-group" role="group" aria-label="Basic example">
                         <button type="submit" value="{{'form.submit|trans'}}" class="btn btn-primary">Créer</button>                  
                        {{ form_rest(form) }}  
                       {{ form_end(form) }} 
                       </div> 
                        <a type="button" class="btn btn-success" href="{{ path('adminPromo') }}">
                             Retour à la liste
                        </a>                         
                     </div>                                
                 </div>
             </div>           
           </div>  
           </fieldset>    
       </div>
    </div>            
  </div>
</div>
 
 {%endblock%}