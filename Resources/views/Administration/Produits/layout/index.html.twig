{% extends '::layout/layoutAdmin.html.twig' %}
{% block stylesheets %}
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap-theme.min.css">       
{% endblock %}
{% block body -%}
     <div class="col-lg-8">
       <div class="panel panel-primary">
           <div class="panel-heading">
               <h2>Liste des produits</h2>
           </div>
           <div class="panel-body">
               <div class="row-fluid">
                   <fieldset>
                       <legend>Tableau des produits</legend>      

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Nom</th>
                <th style="text-align:center;">Cat√©gorie</th>
                <th style="text-align:center;">Prix</th>                
                <th style="text-align:center;">Stock</th>
                <th style="text-align:center;">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr >
                <td>{{ entity.nom }}</td>
                <td style="text-align:center;">{{ entity.categorie }}</td>
                <td style="text-align:center;">{{ entity.prix|number_format(2, '.', ',') }}</td>                
                <td style="text-align:center;">{{ entity.stock }}</td>
                <td style="text-align:center;">
                    <a class="btn btn-info" href="{{ path('adminProduits_show', { 'id': entity.id }) }}"><i class="icon-book"></i></a>
                    <a class="btn btn-success" href="{{ path('adminProduits_edit', { 'id': entity.id }) }}"><i class="icon-edit"></i></a>
                   
                    </td>
            </tr>
        {% endfor %}            
        </tbody>        
        <a class="btn btn-primary" href="{{ path('adminProduits_new') }}">
           <i class="icon-plus"></i>
        </a>        
    </table>
</fieldset>
    <div class="navigation">
        {{ knp_pagination_render(entities) }}
    </div> 
    </div>
</div>            
</div>
</div>
            
       
    {% endblock %}
