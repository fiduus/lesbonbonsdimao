{% extends '::layout/layoutAdmin.html.twig' %}
{% block stylesheets %}
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap-theme.min.css">       
{% endblock %}
{%block body%}        
<div class="col-lg-7">
       <div class="panel panel-primary">
           <div class="panel-heading">
              <h2>Insertion d'un produit</h2>
           </div>
           <div class="panel-body">
               <div class="row-fluid">
                   <fieldset>
                       <legend></legend>                                
             <div class='form-horizontal'>         
              
               {{ form_start(form, {'method': 'post', 'action': path('adminProduits_create'), 'attr': {'class': 'adminProduits_create'}}) }}
              {{ form_errors(form) }}
             
              <div class="form-group">
                
                <div class="col-lg-7 offset1">
                    {{ form_widget(form.nom,{'attr': {'class': 'form-control','placeholder':'Nom'}})  }} 
                     {{ form_errors(form.nom) }}
                </div>
              </div>
              <div class="form-group">
                <div class="col-lg-7 offset1">
                    {{ form_widget(form.nom2,{'attr': {'class': 'form-control','placeholder':'Nom2'}})  }} 
                     {{ form_errors(form.nom2) }}
                </div>
             </div>
             <div class="form-group">
                
                <div class="col-lg-7  offset1">
                    {{ form_widget(form.description,{'attr': {'class': 'form-control','placeholder':'Description'}})  }}
                     {{ form_errors(form.description) }}
                </div>
             </div>        
                
             <div class="form-group">
                
                <div class="col-lg-7  offset1">
                    {{ form_widget(form.vertu,{'attr': {'class': 'form-control','placeholder':'Vertu'}})  }}
                     {{ form_errors(form.vertu) }}
                </div>
             </div>  
                
                <div class="form-group">
                
                <div class="col-lg-7  offset1">
                    {{ form_widget(form.composition,{'attr': {'class': 'form-control','placeholder':'Composition'}})  }}
                     {{ form_errors(form.composition) }}
                </div>
             </div>  
                
                <div class="form-group">
                
                <div class="col-lg-7  offset1">
                    {{ form_widget(form.valnut,{'attr': {'class': 'form-control','placeholder':'Valeurs nutritives'}})  }}
                     {{ form_errors(form.valnut) }}
                </div>
             </div>  
                
                <div class="form-group">
                
                <div class="col-lg-7  offset1">
                    {{ form_widget(form.poids,{'attr': {'class': 'form-control','placeholder':'Poids'}})  }}
                     {{ form_errors(form.poids) }}
                </div>
             </div>  
             <div class="form-group">                 
                <div class="col-lg-7  offset1">
                    {{ form_widget(form.prix,{'attr': {'class': 'form-control','placeholder':'Prix'}})  }}
                     {{ form_errors(form.prix) }}
                </div>
             </div>
             <div class="form-group">
                <div class="col-lg-3 offset1">Image</div><br>
                <div class="col-lg-5 offset1 ">
                    {{ form_widget(form.image)  }}   
                    {{ form_errors(form.image) }}
                </div>
             </div>   
                
            <div class="form-group">
                <div class="col-lg-3 offset1">Image Description</div><br>
                <div class="col-lg-5 offset1 ">
                    {{ form_widget(form.imageDescription)  }}   
                    {{ form_errors(form.imageDescription) }}
                </div>
             </div>  

             <div class="form-group">                
                <div class="col-lg-7  offset1">
                    {{ form_widget(form.categorie, {'attr': {'class': 'form-control'}})  }}
                     {{ form_errors(form.categorie) }}
                </div>
             </div>
             <div class="form-group">
               
                <div class="col-lg-7  offset1">
                    {{ form_widget(form.stock, {'attr': {'class': 'form-control','placeholder':'Stock'}})  }}
                     {{ form_errors(form.stock) }}
                </div>
             </div>
             <div class="form-group">
                
                <div class="col-lg-7  offset1">
                    {{ form_widget(form.tva, {'attr': {'class': 'form-control'}})  }}
                     {{ form_errors(form.tva) }}
                </div>
             </div>
            
             <div class="form-group">
                <div class="col-lg-7  offset1">
                    <div class="btn-group" role="group" aria-label="Basic example">
                        <div class="btn-group" role="group" aria-label="Basic example">
                         <button type="submit" value="{{'form.submit|trans'}}" class="btn btn-primary">Créer</button>                  
                        {{ form_rest(form) }}  
                       {{ form_end(form) }} 
                       </div> 
                        <a type="button" class="btn btn-success" href="{{ path('adminProduits') }}">
                             Retour à la liste
                        </a>                         
                     </div> 
                 
                </div>
             </div>            
           </div>
           </fieldset>    
       </div>
    </div>            
  </div>
</div>
 
 {%endblock%}