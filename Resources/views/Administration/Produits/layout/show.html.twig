{% extends '::layout/layoutAdmin.html.twig' %}
{% block stylesheets %}
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap-theme.min.css">       
{% endblock %}
{% block body -%}
  <div class="col-lg-8">
       <div class="panel panel-primary">
           <div class="panel-heading">
               <h3>Détail du produit</h3>
           </div>
           <div class="panel-body">
               <div class="row-fluid">
                   <fieldset>
                       <legend></legend>
    
    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ entity.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Catégorie</th>
                <td>{{ entity.categorie.nom }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ entity.prix }}€</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ entity.stock}}</td>
            </tr>
        </tbody>
    </table>
</div>
</div>

    <div class="btn btn-group">
        <a type="button" class="btn btn-success" href="{{ path('adminProduits') }}">
            Retour à la liste
        </a>
   
        <a type="button" class="btn btn-primary" href="{{ path('adminProduits_edit', { 'id': entity.id }) }}">
            Mettre à jour
        </a>
            {{ form(delete_form) }}
    </div>
   
               </div>
          </div>
{% endblock %}
