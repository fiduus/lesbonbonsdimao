{% extends '::layout/layoutAdmin.html.twig' %}
{% block stylesheets %}
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap-theme.min.css">       
{% endblock %}
{% block body -%}
     <div class="col-lg-8">
       <div class="panel panel-primary">
           <div class="panel-heading">
               <h2>Bonbons à fabriquer</h2>               
           </div>
           </br>
              
           <div class="panel-body">
               <div class="row-fluid">
                   <fieldset>
                       <legend>Tableau des commandes d'hier</legend>      

    <table class="table table-striped table-hover">
        <thead>
            <tr>                             
               <td style="color:brown">Produit</td>             
               <td style="color:brown;text-align: center;">Quantité</td>  
               <td style="color:brown;text-align: center;">Action</td> 
            </tr>
        </thead>
        <tbody>
         {% if factures|length == 0 %}
            <tr>
                <td colspan="4"><center>Aucune commande actuellement.</center></td>
            </tr>
        {% endif %}
         {% for facture in factures %}                                         
            {% for prod in facture.commande.produit %}
              <tr>
                  <td>{{ prod.reference }}</td>             
                  <td style="text-align: center;">{{ prod.quantite }}</td>   
                  <td style="text-align: center;">
                      <label><input type="checkbox" class=""/></label>                   
                  </td>
              </tr>
            {% endfor %}                  
           
            {% endfor %}
        </tbody>     
           
    </table>
</fieldset>
    <div class="navigation">
        {{ knp_pagination_render(factures) }}
    </div> 
    </div>
</div>            
</div>
</div>            
       
    {% endblock %}

