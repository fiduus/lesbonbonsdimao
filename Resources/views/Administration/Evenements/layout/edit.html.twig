{% extends '::layout/layoutAdmin.html.twig' %}
{% block stylesheets %}
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap-theme.min.css">       
{% endblock %}
       
{%block body%}              
          <div class="col-lg-7 ">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h2>Mise à jour d'un évènement</h2>
                    </div>
                    <div class="panel-body">
                        <div class="row-fluid">
                            <fieldset>
                                <legend></legend>                                
                                    <div class='form-horizontal'>  
              
              <form action="{{ path('adminEvenements_update', { 'id' : entity.id }) }}" method="POST" {{ form_enctype(edit_form) }}>
              {{ form_errors(edit_form) }}
            
             <div class="form-group">
                <div class="col-lg-3">
                   <label class="control-label">Nom</label>   
                </div>
                <div class="col-lg-8">
                    {{ form_widget(edit_form.nom, {'attr': {'class': 'form-control'}})  }}
                    {{ form_errors(edit_form.nom) }}
                </div>
             </div>     
             <div class="form-group">
                <div class="col-lg-3">
                   <label class="control-label">Date</label>   
                </div>
                <div class="col-lg-8">
                    {{ form_widget(edit_form.date, {'attr': {'class': 'form-control'}})  }}
                    {{ form_errors(edit_form.date) }}
                </div>
             </div>    
             <div class="form-group">
                <div class="col-lg-3">
                   <label class="control-label">Code postal</label>   
                </div>
                <div class="col-lg-8">
                    {{ form_widget(edit_form.cp, {'attr': {'class': 'form-control'}})  }}
                    {{ form_errors(edit_form.cp) }}
                </div>
             </div>    
                      
              <div class="form-group">
                <div class="col-lg-3">
                   <label class="control-label">Ville</label>   
                </div>
                <div class="col-lg-8">
                    {{ form_widget(edit_form.ville) }}
                    {{ form_errors(edit_form.ville) }}
                </div>
             </div>       
                                     
             <div class="form-group">
                 <div class="col-lg-3">                     
                </div>
                 
                <div class="col-lg-8">
                   <div class="btn-group" role="group" aria-label="Basic example">
                    <div class="btn-group" role="group" aria-label="Basic example">
                         <button type="submit" value="{{'form.submit|trans'}}" class="btn btn-primary">Mettre à jour</button>                     
                        {{form_end(edit_form)}}
                    </div>
                        <a type="button" class="btn btn-success" href="{{ path('adminEvenements') }}">
                             Retour à la liste
                        </a> 
                           <div class="btn-group" role="group" aria-label="Basic example">                        
                        {{ form_start(delete_form) }}
                        <button class="btn btn-danger" data-toggle="confirmation" data-title="Vous confirmez la suppression?">
                            Supprimer
                        </button>                
                       {{ form_end(delete_form) }}            
                          </div>
                 </div>
             </div> 
            </div>
            </form>
           
           </div>
          </fieldset>
            </div> 
    </div> 
</div> 
</div> 

 {%endblock%}
{% block javascripts %}{% endblock %}